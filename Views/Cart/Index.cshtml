@model IEnumerable<stive.Models.Product>

@{
    ViewData["Title"] = "Cart";
}
<table class="table">
    <thead>
        <tr>
            <th scope="row">1</th>
            <td>Product</td>
            <td>Price</td>
            <td>Quantity</td>
        </tr>
    </thead>
    <tbody>

        @{foreach (var product in Model)
            {
                <tr>
                    <th scope="row">@product.ProductId</th>
                    <td>@product.Name </td>
                    <td>@product.Price</td>
                    <td>1</td>
                </tr>
            }
        }

    </tbody>
</table>

<h1>
    TOTAL : @ViewBag.total €
</h1>